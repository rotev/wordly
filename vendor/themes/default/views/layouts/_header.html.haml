%div.mast
  %h1.site-name= link_to global_settings.site_name, root_url, {:title => global_settings.site_name}
  %h2.site-caption= global_settings.site_caption
%nav.site-nav
  %ul.site-nav-links
    %li.site-nav-link
      = link_to 'Home', root_url, {:title => global_settings.site_name}
    - site_categories.each do |category|
      %li.site-nav-link
        = link_to category.name, category_posts_url(category.slug), {:title => 'Posts in %s' % category.name}